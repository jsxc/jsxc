<h3>{{t "Invite_user"}}</h3>
<p class="jsxc-explanation">{{t "muc_invite_explanation"}}</p>
<form class="form-horizontal">
   <div class="form-group">
      <label class="col-sm-4 control-label" for="jsxc-jid">{{t "Username"}}</label>
      <div class="col-sm-8">
         <input type="email" name="jid" id="jsxc-jid" class="form-control" required="required" />
      </div>
   </div>
   <div class="form-group">
      <label class="col-sm-4 control-label" for="jsxc-reason">{{t "Reason"}}</label>
      <div class="col-sm-8">
         <input type="text" name="reason" id="jsxc-reason" class="form-control" />
      </div>
   </div>
   <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
         <button class="jsxc-button jsxc-button--default jsxc-js-close" type="button">{{t "Close"}}</button>
         <button class="jsxc-button jsxc-button--primary" type="submit">{{t "Invite"}}</button>
      </div>
   </div>
</form>
