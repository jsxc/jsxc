<div class="jsxc-omemo-device" data-device-id="{{id}}" data-trust="{{trust}}">
	<div class="jsxc-omemo-device-trust" data-trust="{{trust}}">{{trust}}</div>
	<div class="jsxc-omemo-device-id {{#if isCurrentDevice}}jsxc-omemo-device-id-current{{/if}}" style="">{{id}}{{#if isCurrentDevice}} <strong>({{t "this_device"}})</strong>{{/if}}</div>
	{{#unless isCurrentDevice}}
	<div class="jsxc-omemo-device-last-used"></div>
	{{/unless}}
	<span>
    <img src="{{qrcodedatauri}}" class="jsxc-own-device-qrcode" />
	<span class="jsxc-omemo-device-fingerprint jsxc-fingerprint">{{fingerprint}}</span>
	</span>

	
	<div class="jsxc-omemo-device-action">
		{{#if showControls}}
			<a href="#" data-action="ignore">{{t "Ignore"}}</a>&nbsp;
			<a href="#" data-action="recognize">{{t "Recognize"}}</a>&nbsp;
			<a href="#" data-action="verify">{{t "Verify"}}</a>
		{{/if}}
	</div>
</div>