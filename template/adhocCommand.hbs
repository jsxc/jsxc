<h3>{{t "AdHocCommands"}}</h3>

<div class="jsxc-account-choice-block">
    <label class="col-sm-4 control-label" for="jsxc-account">{{t "Account"}}</label>
    <div class="col-sm-8">
       <select class="form-control" name="account"></select>
    </div>
</div>

<div class="jsxc-content">
    <form class="form-horizontal" data-type="form">
      <div class="form-group" data-type="jid-multi" data-name="commands" style="padding-right: 30px;">
         <label class="col-sm-4 control-label" for="jsxc-command-selection">{{t "command-selection"}}</label>
         <div class="col-sm-8">
            <select name="jsxc-command-selection" class="jsxc-command-selection form-control"></select>
         </div>
      </div>
      <div class="form-group">
         <div class="col-sm-offset-4 col-sm-8">
            <button class="jsxc-button jsxc-button--default jsxc-js-close" type="button">{{t "Close"}}</button>
            <button class="jsxc-button jsxc-button--primary" type="submit">{{t "Continue"}}</button>
         </div>
      </div>
   </form>
</div>
<div class="jsxc-results"></div>