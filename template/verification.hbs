<h3>{{t "Verification"}}</h3>
<p>{{t "Authenticating_a_buddy_helps_"}}</p>
<div class="jsxc-selection">
   <p data-i18n="[html]How_do_you_want_to_authenticate_your_buddy"></p>

   <div class="btn-group" role="group">
      <button class="btn btn-default" data-i18n="Manual"></button>
      <button class="btn btn-default" data-i18n="Question"></button>
      <button class="btn btn-default" data-i18n="Secret"></button>
   </div>
</div>

<hr />

{{! Manual verification}}
<div class="jsxc-hidden jsxc-verification-manual">
   <p class="jsxc-explanation">{{t "To_verify_the_fingerprint_"}}</p>
   <p>
      <strong>{{t "Your_fingerprint"}}</strong>
      <br />
      {{#if ownFingerprint}}
         <span class="jsxc-uppercase">{{ownFingerprint}}</span>
      {{else}}
         {{t "not_available"}}
      {{/if}}
   </p>
   <p>
      <strong data-i18n="Buddy_fingerprint"></strong>
      <br />
      {{#if theirFingerprint}}
         <span class="jsxc-uppercase">{{theirFingerprint}}</span>
      {{else}}
         {{t "not_available"}}
      {{/if}}
   </p>
   <div class="jsxc-right">
      <button class="btn btn-default jsxc-close">{{t "Close"}}</button>
      <button class="btn btn-primary jsxc-submit">{{t "Compared"}}</button>
   </div>
</div>

{{! SMP with question}}
<div class="form-horizontal jsxc-hidden jsxc-verification-question">
   <p class="jsxc-explanation">{{t "To_authenticate_using_a_question_"}}</p>
   <div class="form-group">
      <label class="col-sm-4 control-label" for="jsxc-quest">{{t "Question"}}</label>
      <div class="col-sm-8">
         <input type="text" name="quest" id="jsxc-quest" class="form-control" />
      </div>
   </div>
   <div class="form-group">
      <label class="col-sm-4 control-label" for="jsxc-secret2">{{t "Secret"}}</label>
      <div class="col-sm-8">
         <input type="text" name="secret2" id="jsxc-secret2" class="form-control" />
      </div>
   </div>
   <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
         <button class="btn btn-default jsxc-close">{{t "Close"}}</button>
         <button class="btn btn-primary jsxc-submit">{{t "Ask"}}</button>
      </div>
   </div>
</div>

{{! SMP with secret}}
<div class="form-horizontal jsxc-hidden jsxc-verification-secret">
   <p class="jsxc-explanation">{{t "To_authenticate_pick_a_secret_"}}</p>
   <div class="form-group">
      <label class="col-sm-4 control-label" for="jsxc-secret">{{t "Secret"}}</label>
      <div class="col-sm-8">
         <input type="text" name="secret" id="jsxc-secret" class="form-control" />
      </div>
   </div>
   <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
         <button class="btn btn-default jsxc-close">{{t "Close"}}</button>
         <button class="btn btn-primary jsxc-submit">{{t "Compare"}}</button>
      </div>
   </div>
</div>
