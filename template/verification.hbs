<h3>{{t "Verification"}}</h3>
<p>{{t "Authenticating_a_buddy_helps"}}</p>
<div class="jsxc-selection">
   <p>{{t "How_do_you_want_to_authenticate_your_buddy"}}</p>

   <div class="jsxc-button-group" role="group">
      <button data-type="manual" class="jsxc-button jsxc-button--default">{{ t "Manual"}}</button>
      <button data-type="question" class="jsxc-button jsxc-button--default">{{ t "Question"}}</button>
      <button data-type="secret" class="jsxc-button jsxc-button--default">{{ t "Secret"}}</button>
   </div>
</div>

<hr />

{{! Manual verification}}
<div data-type="manual" class="jsxc-hidden jsxc-verification-manual">
   <p class="jsxc-explanation">{{t "To_verify_the_fingerprint"}}</p>
   <p>
      <strong>{{t "Your_fingerprint"}}</strong>
      <br />
      {{#if ownFingerprint}}
         <span class="jsxc-uppercase jsxc-fingerprint">{{ownFingerprint}}</span>
      {{else}}
         {{t "not_available"}}
      {{/if}}
   </p>
   <p>
      <strong>{{t "Buddy_fingerprint"}}</strong>
      <br />
      {{#if theirFingerprint}}
         <span class="jsxc-uppercase jsxc-fingerprint">{{theirFingerprint}}</span>
      {{else}}
         {{t "not_available"}}
      {{/if}}
   </p>
   <div class="jsxc-right">
      <button class="jsxc-button jsxc-button--default jsxc-js-close">{{t "Close"}}</button>
      <button class="jsxc-button jsxc-button--primary jsxc-submit">{{t "Compared"}}</button>
   </div>
</div>

{{! SMP with question}}
<div data-type="question" class="form-horizontal jsxc-hidden jsxc-verification-question">
   <p class="jsxc-explanation">{{t "To_authenticate_using_a_question"}}</p>
   <div class="form-group">
      <label class="col-sm-4 control-label" for="jsxc-quest">{{t "Question"}}</label>
      <div class="col-sm-8">
         <input type="text" name="quest" id="jsxc-quest" class="form-control" required="required" />
      </div>
   </div>
   <div class="form-group">
      <label class="col-sm-4 control-label" for="jsxc-secret2">{{t "Secret"}}</label>
      <div class="col-sm-8">
         <input type="text" name="secret2" id="jsxc-secret2" class="form-control" required="required" />
      </div>
   </div>
   <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
         <button class="jsxc-button jsxc-button--default jsxc-js-close">{{t "Close"}}</button>
         <button class="jsxc-button jsxc-button--primary jsxc-submit">{{t "Ask"}}</button>
      </div>
   </div>
</div>

{{! SMP with secret}}
<div data-type="secret" class="form-horizontal jsxc-hidden jsxc-verification-secret">
   <p class="jsxc-explanation">{{t "To_authenticate_pick_a_secret"}}</p>
   <div class="form-group">
      <label class="col-sm-4 control-label" for="jsxc-secret">{{t "Secret"}}</label>
      <div class="col-sm-8">
         <input type="text" name="secret" id="jsxc-secret" class="form-control" required="required" />
      </div>
   </div>
   <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
         <button class="jsxc-button jsxc-button--default jsxc-js-close">{{t "Close"}}</button>
         <button class="jsxc-button jsxc-button--primary jsxc-submit">{{t "Compare"}}</button>
      </div>
   </div>
</div>
